
<div class="form">


  <div class="thumbnail"><img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/169963/hat.svg"/></div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form' }, class: "form-control register-form") do |f| %>
    
  <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder:"Digite seu email ou usuÃ¡rio" %>

  <%= f.password_field :password, autocomplete: 'off', class: 'form-control',placeholder:"Digite sua senha" %>

  <% if devise_mapping.rememberable? %>

  <%= f.label :remember_me do %>

  <%= f.check_box :remember_me %> <%= t('.remember_me', default: 'Lembrar-me') %>

  <% end %>

  <% end %>
  <%= f.submit  t('.sign_in', default: 'Sign in'), class: 'login' %>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>
