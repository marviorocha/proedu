<div class="card card-login mx-auto mt-5">
  <div class="card-header"><%= t('.sign_in', default: 'Sign in') %></div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form' }) do |f| %>
      <div class="form-group">
        <label for="exampleInputEmail1"><%= f.label :email %></label>
  <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder:'Digite login' %>

      </div>
      <div class="form-group">
        <label for="exampleInputPassword1"><%= f.label :password %></label>
          <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder:'Digite sua senha' %>

      </div>
      <div class="form-group">
        <% if devise_mapping.rememberable? %>
        <div class="form-check">
          <%= f.label :remember_me do %>
            <%= f.check_box :remember_me %> <%= t('.remember_me', default: 'Remember me') %>
          <% end %>

        </div>
        <% end %>
      </div>

      <%= f.submit  t('.sign_in', default: 'Sign in'), class: 'btn btn-primary btn-block' %>
    <% end %>
    <div class="text-center">
      <%= render 'devise/shared/links' %>
      
    </div>
  </div>
</div>
