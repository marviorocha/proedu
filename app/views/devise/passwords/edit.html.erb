 

<%= form_for(resource, as: resource_name, url: password_path(resource_name),
 html: { method: :put, class: 'login-form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
  <h3 class="login-head"><i class="fa fa-lg fa-fw fa-user"></i>Alterar Senha</h3>
  <div class="form-group">
    <%= f.label :password, "Alterar senha", class: "form-label" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "Digite seu senha", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirme nova senha", class: "form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group btn-container">
    <%= button_tag type: "submit", disable_with: "Alterando Senha...", class: "btn btn-primary btn-block" do %>
    
    <i class="fa fa-sign-in fa-lg fa-fw"></i> Alterar senha
    <% end %>
  </div>

<% end %>

 

</div>
<div class="row">
<div class="col-sm">
 <p></p>
 <%- if controller_name != 'sessions' %>
  <%= link_to "Fazer login", new_session_path(resource_name) %><br />
<% end %>
 
</div>
