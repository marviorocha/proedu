 

<%= form_for(resource, as: resource_name, html: {class: "login-form"} url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
  <h3 class="login-head"><i class="fa fa-lg fa-fw fa-user"></i>Alterar Senha</h3>
  <div class="field">
    <%= f.label :password, "Alterar senha", class: "form-label" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "Digite seu senha", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirme nova senha", class: "form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group btn-container">
    <%= button_tag type: "submit", disable_with: "Alterando senha...", class: "btn btn-primary btn-block" do %>
    
    <i class="fa fa-sign-in fa-lg fa-fw"></i> Alterar senha
    <%= end %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
