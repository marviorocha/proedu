
<h4><%= t('.change_your_password', default: 'Alterar sua senha') %></h4>

<div class="panel-body">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, role: 'form' }) do |f| %>
    
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.label :password, t('.new_password', default: 'Digite sua nova senha'), class: 'label-material' %>
      <%= f.password_field :password, autofocus: true, class: 'form-control'  %>

    </div>

    <div class="form-group">

      <%= f.label :password_confirmation, t('.confirm_new_password', default: 'Confirme sua senha'), class: 'label-material' %>
      <%= f.password_field :password_confirmation, class: 'form-control'  %>
    </div>

    <%= f.submit t('.change_my_password', default: 'Alterar sua senha'), class: 'btn btn-primary' %>
  <% end %>
</div>
</div>
