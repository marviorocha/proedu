<h2> <%= t('.sign_up', default: 'Cadastre-se') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),
             html: { role: 'form', id: "register-form" }) do |f| %>

             <div class="row">
               <div class="col">

                 <div class="form-row">

                   <div class="form-group col-md-6">
                     <label for="feFirstName">Nome:</label>
                     <%= f.text_field :name, class: 'form-control', placeholder: 'Digite seu nome' %>
                   </div>
                   <div class="form-group col-md-6">
                     <label for="feLastName">Sobre nome:</label>
                     <%= f.text_field :lastname, class: 'form-control', placeholder: 'Digite seu sobre nome' %>
                   </div>

                 </div>

                 <div class="form-row">

                   <div class="form-group col-md-12">
                     <%= f.label :email, class: 'label-material' %>
                     <%= f.email_field :email, autofocus: true, class: 'form-control', required: "email", placeholder: 'Digite seu email'  %> 
                   </div>
                   <div class="form-group col-md-12">
                     <%= f.label :password, class: 'label-material' %>
                     <%= f.password_field :password, class: 'form-control',  placeholder: 'Digite sua senha'  %>
                   </div>

                   <div class="form-group col-md-12">
                     <%= f.label :password_confirmation, class: 'label-material', required:"" %>
                     <%= f.password_field :password_confirmation, class: 'form-control', required:"",  placeholder: 'Confirme sua senha'  %>
                   </div>
                 </div>


                 <%= f.submit t('.sign_up', default: 'Sign up'), class: 'btn btn-primary' %> <%
end %> 

               </div>
             </div>
             </div>
