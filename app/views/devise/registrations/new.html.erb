
  <%= bootstrap_devise_error_messages! %>


<h2>
<%= t('.sign_up', default: 'Sign up') %>

</h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>


<div class="form-group">


      <%= collection_check_boxes(:curse, :curses_ids, Curse.all, :id, :title) do |b| %>
      <div class='ckeck-material' >
        <%= b.check_box %>
        <%= b.label %>
      </div>
      <% end %>


</div>


<div class="form-group">
  <%= f.text_field :name, class: 'input-material' %>
  <%= f.label :name, class: 'label-material' %>
</div>

<div class="form-group">
  <%= f.text_field :lastname, class: 'input-material' %>
  <%= f.label :lastname, class: 'label-material' %>
</div>

<div class="form-group">

  <%= f.email_field :email, autofocus: true, class: 'input-material' %>
  <%= f.label :email, class: 'label-material' %>
</div>
<div class="form-group">

  <%= f.password_field :password, class: 'input-material' %>
  <%= f.label :password, class: 'label-material' %>
</div>
<div class="form-group">

  <%= f.password_field :password_confirmation, class: 'input-material' %>
  <%= f.label :password_confirmation, class: 'label-material' %>
</div>

<%= f.submit t('.sign_up', default: 'Sign up'), class: 'btn btn-primary' %>
<% end %>
</div>
