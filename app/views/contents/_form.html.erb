 

<!-- End Page Header -->
<div class="row">
<div class="col-lg-9 col-md-12">
<!-- Add New Post Form -->
<div class="card card-small mb-3">
<div class="card-body">

<%= form_for @content do |f| %>
<%= f.label :title %>
<%= f.text_field :title, class: 'form-control form-control-lg mb-3', placeholder: "Adicionar lição" %>
<%= f.label 'Inserir Video, Docs etc...' %>
<%= f.text_field :doc, class: 'form-control  mb-3', placeholder: "Documentos, Vídeo URL Etc.." %>
<%= f.label 'Conteúdo' %>
<%= f.rich_text_area :body, class: 'form-control' %>  
</div>
</div>



<!-- / Add New Post Form -->
</div>
<div class="col-lg-3 col-md-12">
<!-- Post Overview -->
<div class="card card-small mb-3">
<div class="card-header border-bottom">
<h6 class="m-0">Ação</h6>
</div>
<div class="card-body p-0">
<ul class="list-group list-group-flush">
<li class="list-group-item p-3">

<%= f.select :publish, [['Publicado', 1], ['Rascunho', 2]], {},  {class: 'browser-default custom-select'} %>

</li>
<li class="list-group-item p-3">
<span class="d-flex mb-2"><i class="material-icons mr-1">calendar_today</i>
<strong class="mr-1">Agendar:</strong> <span id='content_publish_on_display'>Agora</span>
<a id='jobs' class="ml-auto" href="#">Editar</a></span> 
<div class="publish-show">
<%= f.text_field :publish_on, class: 'form-control calendar', placeholder: "Selecione data", autocomplete: 'off' %> 
</div>
</li>

<li class="list-group-item d-flex px-3">
<%= button_tag fa_icon('file-alt', text: 'Publicar'), class: 'btn btn btn-accent ml-auto', data: { disable_with: "Publicando..."} %>
 
</li>
</ul>
</div>
</div>
<!-- / Post Overview -->
