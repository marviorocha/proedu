
<div class="col-lg-12">
  <div class="card">
    <div class="card-body">

<p>      <%= link_to fa_icon('chevron-left', text:'Voltar'), contents_path, class: 'float-right btn btn-outline-primary' %>

 </p>

      <%= simple_form_for(@content) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :title %>
        <%= f.input :body,  input_html: { id: 'editor' } %>
        <%= f.input :doc %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, class:'btn btn-primary'  %>
      </div>
      <p></p>

      <% end %>

    </div>
  </div>
</div>
