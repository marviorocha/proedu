<%= title "Gerenciar Usuários" %>

<!-- Page Header-->
<header class="page-header">
  <div class="container-fluid">
    <h2 class="no-margin-bottom">Usuários</h2>
  </div>
</header>

<%= render "layouts/brandcrumb" %>
<p></p>
<div class="container-fluid">


  <div class="card">

    <h4 class="card-header d-flex align-items-center"><%= content_for(:title) %></h4>
    <div class="card-body">

      <p><%= link_to fa_icon('user', text: 'Add Novo User'), new_user_path, class: 'float-right btn btn-primary' %>

        <div class="table-responsive">
          <p></p>
          <table id="datatable" class="display table" cellspacing="0" >


            <thead>

              <tr>
                <th>#</th>

                <th>Nome</th>
                <th>Sobre Nome</th>
                <th>Email</th>
                <th></th>
                <th cellspacing='5'></th>
              </tr>
            </thead>
            <tfoot>
            <tr>
              <th>#</th>

              <th>Nome</th>
              <th>Sobre Nome</th>
              <th>Email</th>
              <th></th>
            <th cellspacing='5'></th>
            </tr>
        </tfoot>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.lastname %></td>
                <td><%= user.email %></td>
                <td></td>
                <td>


           
                  <%= link_to fa_icon('envelop', text:'Enviar Mensagem'), edit_user_path(user), class: 'btn btn-outline-info btn-sm' %>
                  <%= link_to fa_icon('trash', text: ''), user ,class: 'btn btn-outline-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>

                </td>


              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
