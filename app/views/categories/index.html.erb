<%= title "Categorias" %>

<div class="main-content-container container-fluid px-4">
  
  
  <!-- Page Header -->
  <div class="clearfix page-header row no-gutters py-4">
    <div class="float-left col-9 col-sm-8 text-center text-sm-left mb-0">
      
      
      <span class="text-uppercase page-subtitle">Overview</span>
      <h3 class="page-title">Categorias</h3>
      
    </div>
    
    <div class="col-8 col-sm-4 text-center text-sm-right">
      <%= link_to fa_icon('plus-circle', text: 'Add Categoria'), new_category_path, class: 'mb-2 btn btn-primary mr-2' %>
    </div>
    
  </div>
  <!-- End Page Header -->
  <!-- Default Light Table -->
  <div class="row">
    <div class="col-lg-8 col-md-12">
      <div class="card card-small mb-4">
        <div class="card-header border-bottom">
          
        </div>
        
        <!-- Page Header -->
        
        <div class="card-body">
          <table class="table mb-0" >
            <thead class="bg-light">
              <tr>
                <th scope="col" class="border-0">#</th>
                <th scope="col" class="border-0 text-left">Nome</th>
                <th scope="col" class="border-0">Ação</th>
                
              </tr>
            </thead>
            <tbody>
              <%  @category.each do |categories| %>
              <tr>
                <td><%= categories.id %></td>
                <td class='text-left' ><%= categories.name %></td>
            
                 <td><%= link_to fa_icon('file-alt', text: 'Editar'), edit_category_path(categories), class: 'btn btn-sm btn-info mb-0' %>
                  <%= link_to fa_icon('trash-alt', text: nil), category_path(categories), data: {confirm: "Deseja deletar: #{categories.name}"},
                  class: 'btn btn-sm btn-danger mb-0', method: :delete, remote: true %>
                </td>
              </tr>
              <% end %>
            </tbody>
           </table>
          <%= link_to_prev_page @category, 'Previous Page' %>
         <%= link_to_next_page @category, 'Next Page' %>
	
<div class="clearfix">
			<div class="float-right">
        <%= paginate @category %>
     </div>
</div>


        </div>
      </div>

    </div>
  </div>

  
  <!-- End Default Light Table -->
  <!-- Default Dark Table -->
  
  
  <!-- End Default Dark Table -->
</div>
