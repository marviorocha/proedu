<%= title "Categorias" %>

<!-- Page Header-->
<header class="page-header">
  <div class="container-fluid">
    <h2 class="no-margin-bottom">Categoria</h2>
  </div>
</header>

<%= render "layouts/brandcrumb" %>
<p></p>
<div class="container-fluid">


  <div class="card">

    <h4 class="card-header d-flex align-items-center">Categoria</h4>
    <div class="card-body">

      <p><%= link_to fa_icon('plus', text: 'Criar Novo'), new_category_path, class: 'float-right btn btn-primary' %>

        <div class="table-responsive">
          <p></p>
          <table id="datatable" class="display table" cellspacing="0" >


            <thead>

              <tr>
                <th>#</th>

                <th>Nome:</th>

                <th cellspacing='5'></th>
              </tr>
            </thead>
            <tfoot>
            <tr>
              <th>#</th>

              <th>Nome</th>

              <th></th>
            </tr>
        </tfoot>
            <tbody>
              <% @category.each do |category| %>
              <tr>
                <td><%= category.id %></td>
                <td><%= category.name %></td>

                <td>
                  <%= link_to fa_icon('eye', text:''), category, class: 'btn btn-outline-primary btn-sm' %>
                  <%= link_to fa_icon('pencil', text:'Editar'), edit_category_path(category), class: 'btn btn-outline-info btn-sm' %>
                  <%= link_to fa_icon('trash', text: ''), category ,class: 'btn btn-outline-danger btn-sm', method: :delete, data: { confirm: 'VocÃª deseja deletar a categoria?' } %></td>

                </td>


              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
