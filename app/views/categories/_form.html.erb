
<div class="col-lg-12">
  <div class="card">
    <div class="card-close">
      <%= link_to fa_icon('chevron-left', text:'Voltar'), categories_path, class: 'float-right btn btn-sm btn-outline-secondary' %>
    </div>
    <div class="card-header d-flex align-items-center">
      <h3 class="h4"> <%= content_for(:title) %></h3>
    </div>
    <div class="card-body">

      <%= form_for @category do |f| %>
      <%#= render "shared/errors", object: @content %>

      <div class="form-group">
        <label class="form-control-label"><%= f.label :title %></label>
        <%= f.text_field :name, placeholder: 'Digite o nome da categoria', class: 'form-control' %>
      </div>


      <div class="form-group">
        <%= f.submit content_for(:title), class: 'btn btn-primary'%>

      </div>
      <% end %>
    </div>
  </div>
</div>
