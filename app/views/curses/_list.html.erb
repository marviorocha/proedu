<%= content_for(:title, "Meus cursos") %>

<div class="main-content-container container-fluid px-4">

  <div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
      <span class="text-uppercase page-subtitle">Dashboard</span>
      <h3 class="page-title">Meus Cursos</h3>
    </div>
  </div>

  <div class="container">
    <div class="row">


      <div class="col">
        <div class="card card-small mb-4">
          <div class="card-header border-bottom">
            <h6 class="m-0">Cursos</h6>
          </div>
          <div class="card-body p-0 pb-3 text-center">
            <table class="table mb-0">
              <thead class="bg-light">
                <tr>
                  <th scope="col" class="border-0">#</th>
                  <th scope="col" class="border-0">Lição Total</th>
                  <th scope="col" class="border-0">Lição Concluída</th>
                  <th scope="col" class="border-0">Curso</th>
                  <th scope="col" class="border-0">Categoria</th>
                  <th scope="col" class="border-0">Assistir</th>
                  <th scope="col" class="border-0">Certificado</th>
                </tr>
              </thead>
              <tbody>
                <% current_user.curse.each do |curses| %>
                  <tr>
                    <td><%= image_tag(url_for(curses.picture), :width => 160, :crop => "pad") %></td>
                    <td><%= curses.title %></td>
                    <td> <span class="badge badge-secondary"> <%= current_user.content.size %></span> </td>
                    <td>
                      <%=  status_progress(current_user.content.size, curses.contents.count)
                      %> concluído
                      <div class="progress progress-sm mb-3">
                        <div id="progress-bar-example-2" class="progress-bar bg-info" role="progressbar" style="width: <%=  status_progress(current_user.content.size, curses.contents.count)
                        %>" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                      </div>
                    </td>
                    <td>
                      <%= curses.category.name %>
                    </td> 
                    <td> <%= link_to 'Assistir Aulas', curse_path(curses), class: 'btn btn-primary'  %></td>
                    <td> Não Concluído </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>




