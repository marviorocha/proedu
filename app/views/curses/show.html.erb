
<%= title "Lição - #{ @curse.title }" %>

<!-- Page Header-->
<header class="page-header">
  <div class="container-fluid">
    <h2 class="no-margin-bottom"><%= @curse.title %></h2>
  </div>
</header>

<%= render "layouts/brandcrumb" %>

<p></p>
<div class="container-fluid">

    <div class="card">


      <div class="card-body">
        <h4 class="card-title"><%= @curse.title %></h4>

<p>
  <strong>Titulo:</strong>
  <%= @curse.title %>
</p>

<p>
  <strong>Descrição:</strong>
  <%= @curse.descricao.html_safe %>
</p>

<p>
  <strong>Picture:</strong>
  <%= @curse.picture %>
</p>

<div class="btn-group" role="group" aria-label="Basic example">
<%= link_to fa_icon('pencil', text: 'Editar'), edit_curse_path(@curse), class:"btn btn-sm btn-outline-secondary" %>
<%= link_to fa_icon('chevron-left', text: 'Voltar'), curses_path, class:"btn btn-sm btn-outline-secondary" %>

</div>

</div>
</div>
</div>
