
<%= title "Lição - #{ @curse.title }" %>



 <div class="main-content-container container-fluid px-4">

            <!-- Page Header -->
            <div class="page-header row no-gutters py-4">
              <div class="col-12 col-sm-6 text-center text-sm-left mb-0">
                <span class="text-uppercase page-subtitle">curso</span>
                <h3 class="page-title"><%= @curse.title %></h3>
              </div>
            </div>
            <!-- End Page Header -->

<div class="row">

              <div class="col-lg-8 col-sm-12 mb-6">
                <div class="card card-small card-post card-post--aside card-post--1">
                  <div class="card-post__image" style="background-image: url(<%= url_for(@curse.picture) %>);">
                    <a href="#" class="card-post__category badge badge-pill badge-info"> <%= @curse.category.name %></a>
                    <div class="card-post__author d-flex">
                      <%# <a href="#" class="card-post__author-avatar card-post__author-avatar--small" style="background-image: url('images/avatars/0.jpg');">Written by Anna Ken</a> %>
                    </div>
                  </div>
                  <div class="card-body">
                    <h5 class="card-title">
                      <a class="text-fiord-blue" href="#"><%= @curse.title %></a>
                    </h5>
                    <p class="card-text d-inline-block mb-3"> <%= @curse.descricao %></p> <br>
                    <span class="text-muted">Esse curso foi atualizado em: <%= @curse.updated_at.strftime('%d/%m/%Y') %></span>
                  </div>
                </div>
              </div>
           
  </div>
<p></p>
            <!-- Default Light Table -->
            <div class="row">
              <div class="col">
                <div class="card card-small mb-4">
                  <div class="card-header border-bottom">
                    <h6 class="m-0">Lições</h6>
                  </div>
 
  
                             <!-- Page Header -->

           
                <!--Accordion wrapper-->
<div class="accordion md-accordion" id="accordionEx1" role="tablist" aria-multiselectable="true">
    <% @licao.each do |licao| %>
 
  <!-- Accordion card -->
  <div class="card">

    <!-- Card header -->
    <div class="card-header" role="tab" id="heading<%=  licao.id %>">
      <a class="collapsed" data-toggle="collapse" data-parent="#accordionEx1" href="#collapse<%=  licao.id %>"
        aria-expanded="false" aria-controls="collapse<%=  licao.id %>">
        <h5 class="mb-0">
         # <%= licao.title.strip %> <%= licao.title %> <%= licao.publish? ? fa_icon('angle-down') : "#{fa_icon('lock')} <span class='badge badge-pill badge-info'>Faltam apenas: #{time_ago_in_words(licao.publish_on) } </span>".html_safe %>
        </h5>
      </a>
    </div>
 
    <!-- Card body -->
    <div id="collapse<%= licao.publish ? licao.id : licao.publish  %>" class="collapse" role="tabpanel" aria-labelledby="heading<%=  licao.id %>"
      data-parent="#accordionEx1">
      <div class="card-body">
        <%=  truncate(strip_tags(licao.body.to_s), leagth: 150) %>
        <% if licao.publish? == false %>
       
        <% else %>
        <%= link_to fa_icon('link', text: 'Acessar'), content_path(licao), class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>

  </div>
   <% end %>
  <!-- Accordion card -->
  

</div>
<!-- Accordion wrapper -->

                     
 
                </div>
              </div>
            </div>
            <!-- End Default Light Table -->
