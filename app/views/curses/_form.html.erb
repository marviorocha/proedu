


<div class="col-lg-12">

  <div class="card">
    <div class="card-close">
      <%= link_to fa_icon('chevron-left', text:'Voltar'), curses_path, class: 'float-right btn btn-sm btn-outline-secondary' %>
    </div>
    <div class="card-header d-flex align-items-center">
      <h3 class="h4"><%= content_for(:title) %></h3>
    </div>
    <div class="card-body">
        
      <%= form_for @curse  do |f| %>
      <%#= render "shared/errors", object: @content %>


        <div class="form-group row">
          <label class="form-control-label"></label>

        </div>
        <div class="form-group">
          <label class="form-control-label"><%= f.label :title %></label>
          <%= f.text_field :title, placeholder: 'Digite o nome de seu curso', class: 'form-control' %>
        </div>
        <div class="form-group">
        <label class="form-control-label"><%= f.label :category %></label>
          <%= select(:curse, :category_id,
           Category.all.collect {|p| [ p.name, p.id ] }, {}, class: 'form-control')  %>

        </div>
        <div class="form-group">
          <label class="form-control-label"><%= f.label :descricao %></label>
          <%= f.text_area :descricao, class: 'form-control' %>
        </div>
        <div class="form-group">
        <p>
 
          

 
        </p>
          <p>
            <label class="form-control-label"><%= f.label :picture, 'Imagem' %></label>
            <%= f.file_field :picture, class: 'form-control' %>
          </p>

        </div>

        <div class="form-group row">
          <label class="col-sm-3 form-control-label"><%= f.label :category %> <br>
            </label>
          <div class="col-sm-9">
      <div class="form-group col-md-5">
                
                              </div>
       
            </div>
          </div>


        <div class="form-group">
          <%= f.submit content_for(:title), class: 'btn btn-primary'%>
        </div>
        <% end %>
      </div>
    </div>
  </div>
