<%= title "Cursos" %>

<div class="main-content-container container-fluid px-4">
  
  
  <!-- Page Header -->
  <div class="clearfix page-header row no-gutters py-4">
    <div class="float-left col-12 col-sm-8 text-center text-sm-left mb-0">
      
      
      <span class="text-uppercase page-subtitle">Lista de cursos</span>
      <h3 class="page-title">Cursos</h3>
      
    </div>
    
    <div class="col-12 col-sm-4 text-center text-sm-right">
      <%= link_to fa_icon('plus-circle', text: 'Add Curso'), new_curse_path, class: 'mb-2 btn btn-primary mr-2' %>
    </div>
    
  </div>
  <!-- End Page Header -->
 
            <!-- Default Light Table -->
            <div class="row">
            
              <div class="col">
              
                <div class="card card-small mb-4">
                  <div class="card-header border-bottom">
                   
                   <h6 class="m-0">Lista de cursos</h6>
                    
                  </div>
                  <div class="card-body p-0 pb-3 text-center">
                    <table class="table mb-0">
                      <thead class="bg-light">
                        <tr>
                          <th scope="col" class="border-0">#ID</th>
                          <th scope="col" class="border-0">Thumb:</th>
                          <th scope="col" class="border-0">Cursos:</th>
                          <th scope="col" class="border-0">Descrição:</th>
                          <th scope="col" class="border-0">Categoria:</th>
                            <th scope="col" class="border-0">Estudantes:</th>
                          <th scope="col" class="border-0">Ação</th>
                    
                        </tr>
                      </thead>
                      <tbody>
                  <% @curses.each do |curses| %>
                           <tr>
                  <td># <%= curses.id %> </td>
                 
                  <td><%= image_tag curses.picture.variant(resize: "150x150", gamma: '1.0') %></td>
                       <td><%= curses.title %></td>
                  <td><%= truncate(curses.descricao, length:50 , omission: '... (mais)') %> <br></td>
                  <td><%= curses.category.name %></td>
                  <td><span class="badge badge-pill badge-secondary"><%= curses.user.count %></span> </td>

                  <td>
                    <%= link_to fa_icon('eye', text:''), curses_content_path(curses) , class: 'btn btn-outline-primary btn-sm' %>
                    <%= link_to fa_icon('pencil', text:'Editar'), edit_curse_path(curses), class: 'btn btn-outline-info btn-sm' %>
                    <%= link_to fa_icon('trash', text: ''), curses ,class: 'btn btn-outline-danger btn-sm',
                    method: :delete, remote: true, data: { confirm: 'Deseja deletar esse curso?' } %>
                  </td>
              <% end %>
                </td>
                         
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
            <!-- End Default Light Table -->
            <!-- Default Dark Table -->
 
</tbody>
</table>
</div>
 