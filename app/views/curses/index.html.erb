<%= title "Criar Curso" %>

<!-- Page Header-->
<header class="page-header">
  <div class="container-fluid">
    <h2 class="no-margin-bottom">Criar um novo curso</h2>
  </div>
</header>

<%= render "layouts/brandcrumb" %>
<p></p>
<div class="container-fluid">


  <div class="card">

    <h4 class="card-header d-flex align-items-center">Curso</h4>
    <div class="card-body">

      <p><%= link_to fa_icon('plus', text: 'Criar Novo'), new_curse_path, class: 'float-right btn btn-primary' %>

        <div class="table-responsive">
          <p></p>
          <table id="datatable" class="display table" cellspacing="0" >


            <thead>

              <tr>
                <th>#</th>
                <th>Titulo:</th>
                <th>Descrição:</th>
                <th cellspacing='5'></th>
              </tr>
            </thead>
            <tfoot>
            <tr>
              <th>#</th>
              <th>Titulo</th>
              <th>Descrição</th>
              <th></th>
            </tr>
        </tfoot>
            <tbody>
              <% @curses.each do |curses| %>
              <tr>
                <td><%= curses.id %></td>
                <td><%= curses.title %></td>
                <td><%= truncate(curses.descricao, length:80 ,omission: '... (mais)') %></td>

                <td>
                  <%= link_to fa_icon('eye', text:''), curses, class: 'btn btn-outline-primary btn-sm' %>
                  <%= link_to fa_icon('pencil', text:'Editar'), edit_curse_path(curses), class: 'btn btn-outline-info btn-sm' %>
                  <%= link_to fa_icon('trash', text: ''), curses,class: 'btn btn-outline-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>

                </td>


              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
