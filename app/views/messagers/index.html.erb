<%= title "Minhas Mensagens" %>

<!-- Page Header-->
<header class="page-header">
  <div class="container-fluid">
    <h2 class="no-margin-bottom">Mensagens</h2>
  </div>
</header>

<%= render "layouts/brandcrumb" %>
<p></p>
<div class="container-fluid">


  <div class="card">

    <h4 class="card-header d-flex align-items-center"><%= content_for(:title) %></h4>
    <div class="card-body">

      <p><%= link_to fa_icon('envelope', text: 'Enviar Mensagem'), new_messager_path, class: 'float-right btn btn-primary' %>

        <div class="table-responsive">
          <p></p>
          <table id="datatable" class="display table" cellspacing="0" >


            <thead>

              <tr>
                <th>#</th>

                <th>Assunto:</th>
                <th>Data:</th>
                <th cellspacing='5'></th>
              </tr>
            </thead>
            <tfoot>
            <tr>
              <th>#</th>

              <th>Assunto</th>
              <th>Data</th>
              <th></th>
            </tr>
        </tfoot>
            <tbody>
              <% @messager.each do |messager| %>
              <tr>
                <td><%= messager.id %></td>
                <td><%= messager.subject %></td>
                 <td><span class="badge badge-primary"><%= messager.datatime %></span></td>


                <td>
                  <%= link_to fa_icon('eye', text:''), messager, class: 'btn btn-outline-primary btn-sm' %>
                  <%= link_to fa_icon('pencil', text:'Editar'), edit_messager_path(messager), class: 'btn btn-outline-info btn-sm' %>
                  <%= link_to fa_icon('trash', text: ''), messager ,class: 'btn btn-outline-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>

                </td>


              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
